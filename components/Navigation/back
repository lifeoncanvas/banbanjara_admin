			  </NavItem>
			
			  <NavItem>
				<NavLink  to={"/pages"}>
				 
				  Portfolio
				</NavLink>
			  </NavItem>
			  <NavItem>
				<NavLink  to={"/faq"}>
				
				  FAQ
				</NavLink>
			  </NavItem>
			  <NavItem>
				<NavLink  to={"/contact"}>
				 
				  Contact
				</NavLink>
			  </NavItem>
			</Nav>
		  </div>
		</div>
	) 
}



export default Navigation








